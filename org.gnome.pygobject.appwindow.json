{
    "app-id" : "org.gnome.pygobject.appwindow",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "appwindow.py",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.gnome.OnlineAccounts",
        "--filesystem=host",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1",
            "GI_TYPELIB_PATH" : "/app/lib/girepository-1.0/"
        }
    },
    "modules" : [
        {
            "name" : "wayland",
            "buildsystem" : "autotools",
            "builddir" : true,
            "config-opts" : [
                "--disable-documentation"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/wayland-project/wayland.git"
                }
            ]
        },
        {
            "name" : "graphene",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "--libdir=/app/lib",
                "-Dtests=false",
                "-Dbenchmarks=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/ebassi/graphene.git"
                }
            ]
        },
        {
            "name" : "gtk",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "--libdir=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtk.git"
                }
            ]
        },
        {
            "name" : "appwindow.py",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "--libdir=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/pygobject.git"
                }
            ]
        }
    ]
}
